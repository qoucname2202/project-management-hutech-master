@model List<MDTasks.Models.DepartmentViewModel>
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    a: hover{
        cursor: pointer;
    }
</style>
<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="page-title mb-0 p-0">Department</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Department</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- column -->
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Department</h4>
                    <a class="h6 btn btn-success text-white" asp-action="Create"><i class="mdi mdi-plus"></i>Add</a>
                    <div class="table-responsive">
                        <table id="tableDepartment" class="table user-table">
                            <thead>
                                <tr>
                                    <th class="border-top-0">#</th>
                                    <th class="border-top-0">Department Name</th>
                                    <th class="border-top-0">Manager</th>
                                    <th class="border-top-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model){
                                    <tr>
                                        <td>@(Model.IndexOf(item)+1)</td>
                                        <td>@item.DepartmentName</td>
                                        <td>@item.EmployeeName</td>
                                        <td>
                                            <a title="Edit" asp-action="Edit" asp-route-id="@item.Id"><i class="mdi mdi-tooltip-edit text-success h3"></i></a>
                                            <a title="Remove" href="#" onclick="return RemoveDepartment('@item.Id')"><i class="mdi mdi-delete-circle text-danger h3"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
     $(document).ready(function() {
        $('#tableDepartment').DataTable();
    });
    function RemoveDepartment (id) {
        if (confirm("Are you sure you want to delete this item?") == true) {
            window.location.href = '/Department/Delete/' + id;
        } 
    }
</script>